@model ProyectoTareas.Models.Tarea

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Tarea</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.UrlArchivo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UrlArchivo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UrlArchivo, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Prioridad, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Prioridad, (SelectList)ViewBag.Prioridades, "-- Seleccione Prioridad --", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Prioridad, "", new { @class = "text-danger" })
    </div>


    @Html.Hidden("FechaEjecucion", DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"))



    <div class="form-group">
        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" readonly class="form-control" style="background-color: #f0f0f0;" value="Pendiente" />
            @Html.HiddenFor(model => model.Estado, new { Value = "Pendiente" })
        </div>
    </div>


    @Html.Hidden("MensajeLog", "")
    @Html.Hidden("FechaCreacion", DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"))

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
